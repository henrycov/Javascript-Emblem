<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Javascript Emblem</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <form method="get">
    <div class="contentBox">
      <div class="header">
        <h1>Javascript Emblem</h1>
        <div class="topnav">
          <a class="active" href="/battle">Battle Simulator</a>
          <a href="/creator">Unit Creator</a>
          <a href="/info">Information</a>
          <div class="topnav-right">
            <a href="/login">User Login</a>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="column blueUnit">
          <h2>Blue Unit</h2>
          <select class="unitSelect" id="blueUnit" name="blueName">
            <%- unitSelectionBlue %>
          </select>
          <button type="submit" formaction="/battle/blueSelect">Select Blue Unit</button>
          <br>
          <hr>
          <table>
            <tr>
              <th><label for="blueClass">Class:</label></th>
              <th><input class="unitText" type="text" id="blueClass" name="blueClass" value="<%- blueUnit.class %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueClassType">Class Type:</label></th>
              <th><input class="unitText" type="text" id="blueClassType" name="blueClassType" value="<%- blueUnit.unitType %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueSkills">Skills(WIP):</label></th>
              <th><input class="unitText" type="text" id="blueSkills" name="blueSkills" value="<%- blueUnit.skills %>" readonly></th>
            </tr>
          </table>
          <hr>
          <table>
            <tr>
              <th><label for="blueMaxhp">Max HP:</label></th>
              <th><input class="unitStat" type="number" id="blueMaxhp" name="blueMaxhp" value="<%- blueUnit.stats.maxhp %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueStr">Strength:</label></th>
              <th><input class="unitStat" type="number" id="blueStr" name="blueStr" value="<%- blueUnit.stats.str %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueMag">Magic:</label></th>
              <th><input class="unitStat" type="number" id="blueMag" name="blueMag" value="<%- blueUnit.stats.mag %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueSkl">Skill:</label></th>
              <th><input class="unitStat" type="number" id="blueSkl" name="blueSkl" value="<%- blueUnit.stats.skl %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueSpd">Speed:</label></th>
              <th><input class="unitStat" type="number" id="blueSpd" name="blueSpd" value="<%- blueUnit.stats.spd %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueLck">Luck:</label></th>
              <th><input class="unitStat" type="number" id="blueLck" name="blueLck" value="<%- blueUnit.stats.lck %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueDef">Defence:</label></th>
              <th><input class="unitStat" type="number" id="blueDef" name="blueDef" value="<%- blueUnit.stats.def %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueRes">Resistance:</label></th>
              <th><input class="unitStat" type="number" id="blueRes" name="blueRes" value="<%- blueUnit.stats.res %>" readonly></th>
            </tr>
          </table>
          <hr>
          <table>
            <tr>
              <th><label for="blueWeaponName">Weapon:</label></th>
              <th><input class="unitText" type="text" id="blueWeaponName" name="blueWeaponName" value="<%- blueUnit.weapon.name %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueWeaponType">Type:</label></th>
              <th><input class="unitText" type="text" id="blueWeaponType" name="blueWeaponType" value="<%- blueUnit.weapon.type %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueDamageType">Damage:</label></th>
              <th><input class="unitText" type="text" id="blueDamageType" name="blueDamageType" value="<%- blueUnit.weapon.damage %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueWeaponKiller">Effective:</label></th>
              <th><input class="unitText" type="text" id="blueWeaponKiller" name="blueWeaponKiller" value="<%- blueUnit.weapon.typeKiller %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueWeaponMt">Mt:</label></th>
              <th><input class="unitStat" type="number" id="blueWeaponMt" name="blueWeaponMt" value="<%- blueUnit.weapon.mt %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueWeaponAcc">Accuracy:</label></th>
              <th><input class="unitStat" type="number" id="blueWeaponAcc" name="blueWeaponAcc" value="<%- blueUnit.weapon.hit %>" readonly></th>
            </tr>
            <tr>
              <th><label for="blueWeaponCrt">Crt Rate:</label></th>
              <th><input class="unitStat" type="number" id="blueWeaponCrt" name="blueWeaponCrt" value="<%- blueUnit.weapon.crt %>" readonly></th>
            </tr>
          </table>
        </div>
        <div class="column middle">
          <div class="battleDisplay">
            <div class="row">
              <div class="column blueDisplay">
                <table>
                  <tr>
                    <th><label for="bluehp">HP:</label></th>
                    <th><input class="unitStat" type="text" id="bluehp" name="bluehp" readonly></th>
                  </tr>
                  <tr>
                    <th><label for="blueHit">Hit:</label></th>
                    <th><input class="unitStat" type="text" id="blueHit" name="blueHit" readonly></th>
                  </tr>
                  <tr>
                    <th><label for="blueMt">Damage:</label></th>
                    <th><input class="unitStat" type="text" id="blueMt" name="blueMt" readonly></th>
                  </tr>
                  <tr>
                    <th><label for="blueCrt">Critical:</label></th>
                    <th><input class="unitStat" type="text" id="blueCrt" name="blueCrt" readonly></th>
                  </tr>
                </table>
              </div>
              <div class="column middleDisplay">
                <br>
                <input class="status" type="text" id="status" name="status" value="" readonly>
                <br> <br>
                <button type="submit" formaction="/battle/start">Start</button>
                <button type="submit" formaction="/battle/step">Step</button>
              </div>
              <div class="column redDisplay">
                <table>
                  <tr>
                    <th><label for="redhp">HP:</label></th>
                    <th><input class="unitStat" type="text" id="redhp" name="redhp" readonly></th>
                  </tr>
                  <tr>
                    <th><label for="redHit">Hit:</label></th>
                    <th><input class="unitStat" type="text" id="redHit" name="redHit" readonly></th>
                  </tr>
                  <tr>
                    <th><label for="redMt">Damage:</label></th>
                    <th><input class="unitStat" type="text" id="redMt" name="redMt" readonly></th>
                  </tr>
                  <tr>
                    <th><label for="redCrt">Critical:</label></th>
                    <th><input class="unitStat" type="text" id="redCrt" name="redCrt" readonly></th>
                  </tr>
                </table>
              </div>
            </div>
          </div>

          <div class="battleLogs">
            <textarea value=""readonly></textarea>
          </div>
        </div>
        <div class="column redUnit">
          <form>
            <h2>Red Unit</h2>
            <select class="unitSelect" id="redUnit" name="redName">
              <%- unitSelectionRed %>
            </select>
            <button type="submit" formaction="/battle/redSelect">Select Red Unit</button>
            <br>
            <hr>
            <table>
              <tr>
                <th><label for="redClass">Class:</label></th>
                <th><input class="unitText" type="text" id="redClass" name="redClass" value="<%- redUnit.class %>"></th>
              </tr>
              <tr>
                <th><label for="redClassType">Class Type:</label></th>
                <th><input class="unitText" type="text" id="redClassType" name="redClassType" value="<%- redUnit.unitType %>"></th>
              </tr>
              <tr>
                <th><label for="redSkills">Skills(WIP):</label></th>
                <th><input class="unitText" type="text" id="redSkills" name="redSkills" value="<%- redUnit.skills %>"></th>
              </tr>
            </table>
            <hr>
            <table>
              <tr>
                <th><label for="redMaxhp">Max HP:</label></th>
                <th><input class="unitStat" type="number" id="redMaxhp" name="redMaxhp" value="<%- redUnit.stats.maxhp %>"></th>
              </tr>
              <tr>
                <th><label for="redStr">Strength:</label></th>
                <th><input class="unitStat" type="number" id="redStr" name="redStr" value="<%- redUnit.stats.str %>"></th>
              </tr>
              <tr>
                <th><label for="redMag">Magic:</label></th>
                <th><input class="unitStat" type="number" id="redMag" name="redMag" value="<%- redUnit.stats.mag %>"></th>
              </tr>
              <tr>
                <th><label for="redSkl">Skill:</label></th>
                <th><input class="unitStat" type="number" id="redSkl" name="redSkl" value="<%- redUnit.stats.skl %>"></th>
              </tr>
              <tr>
                <th><label for="redSpd">Speed:</label></th>
                <th><input class="unitStat" type="number" id="redSpd" name="redSpd" value="<%- redUnit.stats.spd %>"></th>
              </tr>
              <tr>
                <th><label for="redLck">Luck:</label></th>
                <th><input class="unitStat" type="number" id="redLck" name="redLck" value="<%- redUnit.stats.lck %>"></th>
              </tr>
              <tr>
                <th><label for="redDef">Defence:</label></th>
                <th><input class="unitStat" type="number" id="redDef" name="redDef" value="<%- redUnit.stats.def %>"></th>
              </tr>
              <tr>
                <th><label for="redRes">Resistance:</label></th>
                <th><input class="unitStat" type="number" id="redRes" name="redRes" value="<%- redUnit.stats.res %>"></th>
              </tr>
            </table>
            <hr>
            <table>
              <tr>
                <th><label for="redWeaponName">Weapon:</label></th>
                <th><input class="unitText" type="text" id="redWeaponName" name="redWeaponName" value="<%- redUnit.weapon.name %>"></th>
              </tr>
              <tr>
                <th><label for="redWeaponType">Type:</label></th>
                <th><input class="unitText" type="text" id="redWeaponType" name="redWeaponType" value="<%- redUnit.weapon.type %>"></th>
              </tr>
              <tr>
                <th><label for="redDamageType">Damage:</label></th>
                <th><input class="unitText" type="text" id="redDamageType" name="redDamageType" value="<%- redUnit.weapon.damage %>"></th>
              </tr>
              <tr>
                <th><label for="redWeaponKiller">Effective:</label></th>
                <th><input class="unitText" type="text" id="redWeaponKiller" name="redWeaponKiller" value="<%- redUnit.weapon.typeKiller %>"></th>
              </tr>
              <tr>
                <th><label for="redWeaponMt">Mt:</label></th>
                <th><input class="unitStat" type="number" id="redWeaponMt" name="redWeaponMt" value="<%- redUnit.weapon.mt %>"></th>
              </tr>
              <tr>
                <th><label for="redWeaponAcc">Accuracy:</label></th>
                <th><input class="unitStat" type="number" id="redWeaponAcc" name="redWeaponAcc" value="<%- redUnit.weapon.hit %>"></th>
              </tr>
              <tr>
                <th><label for="redWeaponCrt">Crt Rate:</label></th>
                <th><input class="unitStat" type="number" id="redWeaponCrt" name="redWeaponCrt" value="<%- redUnit.weapon.crt %>"></th>
              </tr>
            </table>
          </form>
        </div>
      </div>


    </div>
  </form>
</body>

</html>